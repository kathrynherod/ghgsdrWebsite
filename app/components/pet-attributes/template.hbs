{{#each attributes as |attribute index|}}
    {{#if showIcon}}
        {{#if attribute.icon}}
            {{pet-attributes/pet-attribute-card
                icon=attribute.icon
                name=attribute.name
                value=attribute.value
            }}
        {{/if}}
    {{else}}
        {{pet-attributes/pet-attribute-tr
            name=attribute.name
            value=attribute.value
            index=index
        }}
    {{/if}}
{{/each}}