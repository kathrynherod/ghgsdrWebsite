{{#bs-modal
    open=showModal
    title=modalTitle
    size="lg"
    onHidden=(action (mut showModal) false)
    as |modal|
}}
    {{#modal.header}}
        {{modalTitle}}
    {{/modal.header}}
    {{#modal.body}}
        <img src={{modalImageUrl}}/>
    {{/modal.body}}
    {{#modal.footer}}
        {{#bs-button
            onClick=(action modal.close)
        }}
            Close
        {{/bs-button}}
    {{/modal.footer}}

{{/bs-modal}}